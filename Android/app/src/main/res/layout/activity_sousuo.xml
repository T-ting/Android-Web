<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.Activity.ReporterActivity.UserActivity.sousuo">

    <EditText
            android:id="@+id/sou_text"
            android:hint="请输入要搜索的内容(新闻标题，音乐名字，视频信息)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/sou_news"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="搜索新闻"/>
        <Button
                android:id="@+id/sou_music"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="搜索音乐"/>
        <Button
                android:id="@+id/sou_video"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="搜索视频"/>
    </LinearLayout>

    <ListView
            android:id="@+id/show_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
